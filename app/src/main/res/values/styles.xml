<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="VoterCardStyle">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke</item>
    </style>

    <style name="WhiteOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white_stroke_color</item>
        <item name="hintTextColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
    </style>

    <style name="VoteOptionStyle">
        <item name="android:theme">@style/VoteOptionTheme</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="VoteOptionTheme">
        <item name="colorAccent">@color/buksu_deep_purple</item>
        <item name="colorControlNormal">@color/buksu_deep_purple</item>
        <item name="colorControlActivated">@color/buksu_deep_purple</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/buksu_deep_purple</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/buksu_deep_purple</item>
    </style>

    <style name="CustomMaterialDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/buksu_gold</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/buksu_gold</item>
        <item name="android:backgroundTint">@color/buksu_deep_purple</item>
    </style>

    <style name="BuksuDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/buksu_deep_purple</item>
        <item name="colorAccent">@color/buksu_gold</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/buksu_deep_purple</item>
        <item name="android:textColorPrimary">@color/buksu_deep_purple</item>
        <item name="buttonBarPositiveButtonStyle">@style/BuksuPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/BuksuNegativeButtonStyle</item>
    </style>

    <style name="BuksuPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/buksu_gold</item>
    </style>

    <style name="BuksuNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/buksu_deep_purple</item>
    </style>

    <style name="BuksuInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/buksu_gold</item>
        <item name="hintTextColor">@color/buksu_gold</item>
        <item name="android:textColorHint">@color/buksu_gold</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">#33FFFFFF</item>
    </style>

    <style name="BuksuInputLayoutStyleDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/buksu_gold</item>
        <item name="hintTextColor">@color/buksu_gold</item>
        <item name="android:textColorHint">@color/buksu_gold</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">#33FFFFFF</item>
    </style>

</resources>