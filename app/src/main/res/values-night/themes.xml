<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppDevFinal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buksu_gold</item>
        <item name="colorPrimaryVariant">@color/dark_surface</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/buksu_purple_light</item>
        <item name="colorSecondaryVariant">@color/buksu_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="cardBackgroundColor">@color/dark_card</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>
    </style>

    <style name="Widget.App.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="rippleColor">@color/dark_text_secondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>