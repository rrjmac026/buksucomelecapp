<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cast Your Vote"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/buksu_deep_purple"
            android:layout_marginBottom="16dp"/>

        <!-- President Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="President (Vote for 1)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/buksu_deep_purple"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/presidentGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/president1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juan Dela Cruz"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/president2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maria Santos"
                android:padding="8dp"/>
        </RadioGroup>

        <!-- Vice President Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vice President (Vote for 1)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/buksu_deep_purple"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/vpGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/vp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pedro Reyes"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/vp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ana Garcia"
                android:padding="8dp"/>
        </RadioGroup>

        <!-- Senators Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senators (Vote for up to 12)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/buksu_deep_purple"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/senatorsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First 24 senators -->
            <CheckBox 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senator Candidate 1" 
                android:padding="8dp"/>
            <CheckBox 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senator Candidate 2" 
                android:padding="8dp"/>
            <CheckBox 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senator Candidate 3" 
                android:padding="8dp"/>
            <CheckBox 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senator Candidate 4" 
                android:padding="8dp"/>
            <!-- ... Add remaining senators with same layout attributes ... -->
        </LinearLayout>

        <Button
            android:id="@+id/submitVoteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Vote"
            android:textColor="@color/buksu_gold"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/buksu_deep_purple"/>

    </LinearLayout>
</ScrollView>
